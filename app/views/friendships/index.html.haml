.page-header
  = link_to new_friendship_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Friendship
  %h1 Listing friendships

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th User
        %th Friend
        %th
        %th
        %th

    %tbody
      - @friendships.each do |friendship|
        %tr
          %td= friendship.user
          %td= friendship.friend
          %td= link_to 'Show', friendship
          %td= link_to 'Edit', edit_friendship_path(friendship)
          %td= link_to 'Destroy', friendship, :data => { confirm: 'Are you sure?' }, :method => :delete
